<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BudgetPro.ViewModels"
             x:Class="BudgetPro.Pages.EditBudgetPage"
             x:DataType="viewModels:EditBudgetViewModel"
             Title="{Binding Title}">
    <ScrollView Padding="10">
        <VerticalStackLayout Spacing="5">
            <VerticalStackLayout Spacing="10"
                                 Padding="10,0,10,20">
                <Label Text="Budget Name"
                       FontSize="14"
                       TextColor="Gray" />
                <Entry Text="{Binding BudgetName}"
                       Placeholder="Enter budget name"
                       BackgroundColor="White"
                       TextColor="Black" />
                <Label Text="Budget Amount"
                       FontSize="14"
                       TextColor="Gray" />
                <Entry Text="{Binding BudgetAmount, StringFormat='{0:F2}'}"
                       Placeholder="0.00"
                       Keyboard="Numeric"
                       BackgroundColor="White"
                       TextColor="Black" />
                <Label Text="Description"
                       FontSize="14"
                       TextColor="Gray" />
                <Editor Text="{Binding BudgetDescription}"
                        Placeholder="Enter budget description (optional)"
                        HeightRequest="80"
                        BackgroundColor="White"
                        TextColor="Black" />
            </VerticalStackLayout>
            <Grid ColumnDefinitions="*,Auto"
                  Padding="0,10,0,5">
                <Label Text="Budget Items"
                       VerticalOptions="Center"
                       FontAttributes="Bold"
                       FontSize="16"
                       Grid.Column="0" />
                <Button Text="Add Item"
                        VerticalOptions="Center"
                        WidthRequest="90"
                        Grid.Column="1"
                        BackgroundColor="#210F37"
                        TextColor="White"
                        Command="{Binding AddItemCommand}" />
            </Grid>
            <!-- Budget Items Collection -->
            <CollectionView ItemsSource="{Binding BudgetItems}"
                            EmptyView="No items added yet. Tap 'Add Item' to add budget items."
                            Margin="0,5,0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="0"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#F5F5F5"
                                Padding="10"
                                Margin="0,5">
                            <Grid ColumnDefinitions="*,Auto,Auto"
                                  RowDefinitions="Auto,Auto"
                                  RowSpacing="5">
                                <!-- Item Name on the left - FIXED -->
                                <Label Text="{Binding Name}"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Start" />
                                <!-- Price - FIXED -->
                                <Label Text="{Binding PriceFormatted}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       HorizontalOptions="Start" />
                                <!-- Quantity Controls on the right -->
                                <HorizontalStackLayout Grid.Column="1"
                                                       Grid.RowSpan="2"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="Center"
                                                       Spacing="4">
                                    <Button Text="âˆ’"
                                            WidthRequest="35"
                                            HeightRequest="35"
                                            FontSize="18"
                                            BackgroundColor="#F5F5F5"
                                            CornerRadius="20"
                                            TextColor="Black"
                                            BorderColor="Transparent"
                                            BorderWidth="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:EditBudgetViewModel}}, Path=DecreaseQuantityCommand}"
                                            CommandParameter="{Binding .}" />
                                    <Label Text="{Binding Quantity}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           WidthRequest="35"
                                           HorizontalTextAlignment="Center"
                                           TextColor="Black" />
                                    <Button Text="+"
                                            FontAttributes="Bold"
                                            WidthRequest="35"
                                            HeightRequest="35"
                                            FontSize="18"
                                            BackgroundColor="#F5F5F5"
                                            CornerRadius="20"
                                            TextColor="Black"
                                            BorderColor="Transparent"
                                            BorderWidth="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:EditBudgetViewModel}}, Path=IncreaseQuantityCommand}"
                                            CommandParameter="{Binding .}" />
                                </HorizontalStackLayout>
                                <!-- Delete Button on the far right -->
                                <Button Text="ðŸ—‘ï¸"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        FontSize="18"
                                        CornerRadius="20"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Grid.Column="2"
                                        Grid.RowSpan="2"
                                        BackgroundColor="Transparent"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:EditBudgetViewModel}}, Path=DeleteItemCommand}"
                                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!-- Total section -->
            <Border StrokeThickness="0"
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="#210F37"
                    Padding="15,10"
                    Margin="0,10,0,20">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Total"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           Grid.Column="0" />
                    <Label Text="{Binding TotalItemsPrice, StringFormat='${0:F2}'}"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Grid.Column="1" />
                </Grid>
            </Border>
            <!-- Buttons -->
            <Button Text="Save Budget"
                    Padding="10"
                    Margin="0,10,0,10"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Command="{Binding UpdateBudgetCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
            <Button Text="Delete Budget"
                    Padding="10"
                    TextColor="#F44336"
                    BorderColor="#F44336"
                    BorderWidth="2"
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Command="{Binding DeleteBudgetCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               Color="#210F37"
                               HeightRequest="50"
                               Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>