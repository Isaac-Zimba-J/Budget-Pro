<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetPro.Pages.ChatPage"
             Title="Community Chat">
    <Grid RowDefinitions="*,Auto"
          Padding="10">
        <!-- Message List -->
        <CollectionView Grid.Row="0"
                        ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="2"
                                         HorizontalOptions="{Binding UserId, Converter={StaticResource UserIdToAlignmentConverter}}">
                        <Label Text="{Binding UserId}"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="Gray" />
                        <Border BackgroundColor="#E5E5EA"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="10"
                                MaximumWidthRequest="280">
                            <Label Text="{Binding Text}"
                                   FontSize="14"
                                   TextColor="Black" />
                        </Border>
                        <Label Text="{Binding Created, StringFormat='{0:t}'}"
                               FontSize="10"
                               TextColor="Gray" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <!-- Message Input -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,Auto"
              Padding="0,10,0,0"
              VerticalOptions="End">
            <Border StrokeThickness="0"
                    StrokeShape="RoundRectangle 12"
                    Stroke="#CCCCCC"
                    BackgroundColor="White"
                    Padding="10"
                    VerticalOptions="Center">
                <Entry x:Name="MessageEntry"
                       Placeholder="Type a message..."
                       FontSize="14"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       Text="{Binding MessageText}" />
            </Border>
            <Button Text="Send"
                    HeightRequest="50"
                    WidthRequest="90"
                    Grid.Column="1"
                    BackgroundColor="#210F37"
                    TextColor="White"
                    Padding="15,0"
                    VerticalOptions="Center"
                    CornerRadius="25"
                    Command="{Binding SendMessageCommand}" />
        </Grid>
    </Grid>
</ContentPage>