<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:BudgetPro.ViewModels"
             xmlns:model="clr-namespace:BudgetPro.Models"
             xmlns:zimba="clr-namespace:Zimba.Maui.Controls;assembly=Zimba.Maui"
             xmlns:mauiKit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewModel:MainPageViewModel"
             x:Class="BudgetPro.MainPage">
    <Page.Behaviors>
        <mauiKit:StatusBarBehavior StatusBarColor="White" />
    </Page.Behaviors>
    <Grid>
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <ScrollView Padding="10">
                <Grid RowDefinitions="Auto,*">
                    <!-- Header Section with Stats -->
                    <VerticalStackLayout Padding="0,0,0,0">
                        <Label Padding="7,10,0,0"
                               Text="Manage your budgets and track your household items" />
                        <HorizontalStackLayout HorizontalOptions="Center"
                                               Spacing="20"
                                               Padding="0,30,0,0">
                            <Border BackgroundColor="#D9D9D9"
                                    WidthRequest="180"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8"
                                    HeightRequest="80">
                                <VerticalStackLayout>
                                    <Label HorizontalOptions="Center"
                                           Padding="0,8,0,0"
                                           Text="Total Budgeted" />
                                    <Label HorizontalOptions="Center"
                                           Padding="0,5,0,0"
                                           FontAttributes="Bold"
                                           FontSize="19"
                                           Text="{Binding TotalBudgeted, StringFormat='K{0:N2}'}" />
                                </VerticalStackLayout>
                            </Border>
                            <Border BackgroundColor="#D9D9D9"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8"
                                    WidthRequest="180"
                                    HeightRequest="80">
                                <VerticalStackLayout>
                                    <Label HorizontalOptions="Center"
                                           Padding="0,8,0,0"
                                           Text="Total Spent" />
                                    <Label HorizontalOptions="Center"
                                           Padding="0,5,0,0"
                                           FontAttributes="Bold"
                                           FontSize="19"
                                           Text="{Binding TotalSpent, StringFormat='K{0:N2}'}" />
                                </VerticalStackLayout>
                            </Border>
                        </HorizontalStackLayout>
                        <Button Margin="10"
                                Background="#D9D9D9"
                                WidthRequest="383"
                                Text="Create Budget"
                                TextColor="Black"
                                Command="{Binding AddBudgetCommand}" />
                    </VerticalStackLayout>
                    <!-- Budget List Section -->
                    <VerticalStackLayout Padding="10,30,10,0"
                                         Spacing="5"
                                         Grid.Row="1">
                        <Label Padding="0,10"
                               Text="Budgets" />
                        <!-- Display when there are no budgets -->
                        <Border StrokeThickness="0"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#D9D9D9"
                                IsVisible="{Binding HasData, Converter={StaticResource InvertedBoolConverter}}">
                            <VerticalStackLayout Padding="20">
                                <Label Text="{Binding ErrorMessage}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </VerticalStackLayout>
                        </Border>
                        <!-- Collection of Budgets -->
                        <CollectionView ItemsSource="{Binding Budgets}"
                                        SelectionMode="None"
                                        IsVisible="{Binding HasData}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:Budget">
                                    <VerticalStackLayout Spacing="10"
                                                         Padding="0,0,0,10">
                                        <Border StrokeThickness="0"
                                                StrokeShape="RoundRectangle 8"
                                                BackgroundColor="#D9D9D9">
                                            <VerticalStackLayout Padding="10"
                                                                 Spacing="10">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <Label Text="{Binding Name}"
                                                           Grid.Column="0"
                                                           HorizontalOptions="Start" />
                                                    <Label Text="76%"
                                                           Grid.Column="1"
                                                           HorizontalOptions="End"
                                                           VerticalOptions="End" />
                                                </Grid>
                                                <ProgressBar Progress="0.76"
                                                             ProgressColor="#210F37"
                                                             HeightRequest="10"
                                                             Margin="0,5,0,0" />
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <Border Grid.Column="0"
                                                            WidthRequest="100"
                                                            HeightRequest="20"
                                                            StrokeThickness="0"
                                                            StrokeShape="RoundRectangle 8"
                                                            BackgroundColor="#210F37"
                                                            HorizontalOptions="Start">
                                                        <Label HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               Text="{Binding Description}"
                                                               TextColor="White" />
                                                    </Border>
                                                    <HorizontalStackLayout Grid.Column="1"
                                                                           Spacing="10"
                                                                           HorizontalOptions="End">
                                                        <Label Text="{Binding TotalAmount, StringFormat='K{0:N2}'}"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="End"
                                                               VerticalOptions="Center" />
                                                        <Label Text="Details"
                                                               FontSize="16"
                                                               HorizontalOptions="End"
                                                               VerticalOptions="Center" />
                                                        <Image Source="arrow.png"
                                                               HorizontalOptions="End"
                                                               VerticalOptions="Center" />
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </VerticalStackLayout>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:MainPageViewModel}}, Path=EditBudgetCommand}"
                                                                      CommandParameter="{Binding .}" />
                                            </Border.GestureRecognizers>
                                        </Border>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                    <!-- Loading Indicator -->
                    <ActivityIndicator Grid.Row="1"
                                       IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Color="#210F37" />
                </Grid>
            </ScrollView>
        </RefreshView>
        <!-- Floating Action Button -->
        <zimba:FAB BackgroundColor="#210F37"
                   Command="{Binding AddBudgetCommand}" />
    </Grid>
</ContentPage>